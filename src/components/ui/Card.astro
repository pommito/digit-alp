---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

type Props = {
  work: CollectionEntry<"works">;
}

const { work } = Astro.props;
const { title, thumbnail, client } = work.data;

---
<article class="relative flex items-end group rounded-xl p-4 overflow-hidden w-full aspect-3/4 col-span-1">
  <a href={`/projets/${work.id}`} aria-label="Voir la rÃ©alisation" class="flex w-full">
    <picture class="absolute inset-0">
      {thumbnail && (
        <Image src={thumbnail} alt={`${title} pour ${client}`} format="avif" class="h-full w-full object-cover object-center transform transition-transform duration-300 group-hover:scale-105" />
      )}
    </picture>
    <div class={`relative flex justify-between bg-da-white text-da-black rounded-md w-full py-6 p-4 z-10 gap-2`}>
      <header class="flex-1">
        <h3 class="mb-2 text-xl">{title}</h3>
        <h4 class="text-base font-sans opacity-80">{client}</h4>
      </header>
      <div class="flex items-center justify-center bg-da text-da-white size-12 rounded-lg group-hover:rotate-45 transition-all">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="-rotate-45"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
      </div>
    </div>
  </a>
</article>