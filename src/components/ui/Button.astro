---
type Props = {
  label : string;
  link: string;
  style : 'primary' | 'secondary';
}

const { label, link, style } = Astro.props;

const colors = style === 'primary' ? 'bg-da text-da-white' : 'bg-da-white text-da-black';
---

<a href={link} class=`${colors} group/button block w-fit h-fit text-lg font-medium rounded-full cursor-pointer`>
  <div class="w-full h-full flex px-6 py-4 box-border items-center justify-center transition-transform transform-3d duration-750 ease-[cubic-bezier(0.76,0,0.24,1)]  group-hover/button:rotate-x-90">
    <span class="transition-all duration-750 ease-[cubic-bezier(0.76,0,0.24,1)] group-hover/button:-translate-y-full group-hover/button:opacity-0">{label}</span>
    <span class="absolute opacity-0 transition-all duration-750 ease-[cubic-bezier(0.76,0,0.24,1)] -rotate-x-90 group-hover/button:opacity-100">{label}</span>
  </div>  
</a>