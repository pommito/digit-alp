---
import { Image } from 'astro:assets';


type Props = {
  icon: ImageMetadata;
  title: string;
  text: string;
};

const { icon, title, text } = Astro.props;

---


<li class="flex flex-col justify-center items-center gap-4 rounded-lg p-6">
  <Image src={icon} alt={title} class="w-16 h-16 md:w-20 md:h-20" />
  <h3 class="text-xl md:text-2xl md:mb-2">{title}</h3>
  <p>{text}</p>
</li>