---
import { Image } from "astro:assets";
import Button from "../ui/Button.astro";

import gojuraCard from "@/assets/gojura_website.png";
import gastiniCard from "@/assets/gastini_website.png";
import montyonCard from "@/assets/montyon_website.png";
---

  <div class="relative w-screen max-w-[1920px] h-screen text-center flex flex-col justify-center items-center gap-4 px-4 py-6 mx-auto md:gap-4 md:p-12">
    
    <div class="relative w-full h-48">
      <a href="/projets/gastini" aria-label="Voir le projet de l'entreprise Gastini" class="w-48 absolute top-2/3 left-1/2 -translate-x-1/2 -translate-y-1/2 -rotate-3 h-auto shadow-xl rounded-md z-3 transition-all duration-300 ease-in-out hover:z-4 hover:-rotate-4 hover:shadow-hero-card md:top-1/2">
        <Image src={gastiniCard} alt="Placeholder" width={600} height={450} loading={"eager"} class="w-full h-auto object-cover" />
      </a>
      <a href="/projets/montyon-capital" aria-label="Voir le projet de l'entreprise Montyon Capital" class="w-48 absolute top-[75%] left-[40%] -translate-x-1/2 -translate-y-1/2 -rotate-15 h-auto shadow-xl rounded-md z-2 transition-all duration-300 ease-in-out hover:z-4 hover:-rotate-14 hover:shadow-hero-card md:top-[55%]">
        <Image src={montyonCard} alt="Placeholder" width={600} height={450} loading={"eager"} class="w-full h-auto object-cover" />
      </a>
      <a href="/projets/gojura" aria-label="Voir le projet de l'entreprise Gojura" class="w-48 absolute top-[55%] left-[60%] -translate-x-1/2 -translate-y-1/2 rotate-5 h-auto shadow-xl rounded-md z-1 transition-all duration-300 ease-in-out hover:z-4 hover:rotate-4 hover:shadow-hero-card md:top-[45%]">
        <Image src={gojuraCard} alt="Placeholder" width={600} height={450} loading={"eager"} class="w-full h-auto object-cover"  />
      </a>
    </div>
    <h1 class="opacity-0">Agence Web à Chambéry</h1>
    <h2 class="text-4xl !font-sans md:text-6xl lg:w-2/3 lg:max-w-[800px]">Constructeurs de sites web <em class="text-da font-title">performants</em> et <em class="text-da font-title">durables</em></h2>
    <p class="text-balance md:text-lg md:max-w-[600px] ">Spécialiste du développement web, nous vous accompagnons dans la construction et la réalisation de tous vos projets web.</p>
    <div class="flex gap-4 pt-2">
      <Button label="J'ai un projet !" secondLabel="Let's go !" link='/contact' style="primary" />
      <Button label="Réserver un appel" link='/contact' style="secondary" />
    </div>
    
  </div>