---

type Props = {
  title: string;
  description: string;
}

const { title, description} = Astro.props as Props;

---

<section class="bg-da-black text-da-white pt-40 pb-10 px-4 md:pt-80 md:pb-20 md:px-0">
  <div class="container flex items-center mx-auto  mb-20">
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 md:gap-0">
        <h1 class="text-4xl  md:text-6xl">{title}</h1>
        <p class="text-lg text-balance">{description}</p>
    </div>
  </div>
</section>