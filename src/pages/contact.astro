---
import PageLayout from "@/layouts/PageLayout.astro";
import ContactForm from "@/components/ui/ContactForm.astro";
---


<PageLayout title="Contactez-nous" description="Vous avez un projet à nous confier ? Vous voulez discuter de nouvelles opportunités digitales pour votre business ou simplement optimiser vos solutions actuelles ?" theme="dark">
  <section class="container mx-auto space-y-10 px-4 py-10 md:space-y-20 md:px-0 md:py-10">
    <h2 class="text-4xl text-center md:text-5xl">Echangons ensemble sur votre projet</h2>
    <div class="mb-20 md:w-1/2 md:mx-auto">
      <ContactForm />
    </div>
  </section>
</PageLayout>
