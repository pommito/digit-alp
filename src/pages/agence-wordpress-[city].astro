---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";

import Layout from "@/layouts/Layout.astro";
import Button from "@/components/ui/Button.astro";
import ServiceItem from "@/components/ServiceItem.astro";
import FeaturedWorks from "@/components/FeaturedWorks.astro";
import CtaBanner from "@/components/CtaBanner.astro";

import { cities } from "@/data/programmatic";
import gojuraCard from "@/assets/gojura_website.png";
import gastiniCard from "@/assets/gastini_website.png";
import montyonCard from "@/assets/montyon_website.png";

export async function getStaticPaths() {
  return cities.map((city) => ({
    params: { city: city.toLocaleLowerCase() },
  }));
}

const { city } = Astro.params;

// Get the city name with the first letter in uppercase
const cityName = cities.find((item) => item.toLocaleLowerCase() === city);

const expertises = await getCollection("expertises");
const clients = await getCollection("projects");

const featuredProjects = clients.filter((entry) => entry.data.isFeatured);
const sortedExpertises = expertises.sort((a, b) => a.data.order - b.data.order);
---

<Layout
  title=`Digit'Alp - Agence wordpress à ${cityName}`
  metaTitle=`Votre agence wordpress à ${cityName} - Digit'Alp`
  metaDescription=`Digit'Alp est une agence wordpress à ${cityName} experte en création de sites web, solutions e-commerce, référencement naturel, maintenance et infogérance.`
  theme="light"
>
  <div class="w-screen h-screen mx-auto">
    <div
      class="relative w-screen max-w-[1920px] h-screen flex flex-col justify-center items-center gap-6 px-4 py-6 mx-auto lg:flex-row md:gap-4 md:p-12"
    >
      <div class="order-2 lg:w-3/5 lg:order-1">
        <h1 class="uppercase mb-1 md:text-xl">
          Votre agence wordpress à {cityName}
        </h1>
        <h2 class="text-4xl md:text-5xl xl:text-7xl">
          Créateur passioné de sites <em class="text-da">wordpress</em> performants
          à <em class="text-da">{cityName}</em>
        </h2>
        <p class="text-balance py-4 text-lg">
          Digit'Alp est une agence wordpress basé à {cityName}. Depuis 3 ans
          nous vous accompagnons dans la réalisation de tous vos projets
          digitaux. Création, optimisation, maintenance, sécurisation :
          ensemble, construisons des solutions concrètes pour votre activité.
        </p>
        <Button label="J'ai un projet !" link="/contact" style="primary" />
      </div>

      <div class="relative w-full h-1/2 order-1 lg:h-full lg:w-2/5 lg:order-2">
        <a
          href="/projets/gastini"
          aria-label="Voir le projet de l'entreprise Gastini"
          class="w-48 sm:w-64 md:w-80 absolute top-2/3 left-1/2 -translate-x-1/2 -translate-y-1/2 -rotate-5 h-auto shadow-xl rounded-md z-3 transition-all duration-300 ease-in-out hover:z-4 hover:-rotate-4 hover:shadow-hero-card md:top-1/2"
        >
          <Image
            src={gastiniCard}
            alt="Placeholder"
            width={600}
            height={450}
            class="w-full h-auto object-cover"
          />
        </a>
        <a
          href="/projets/montyon-capital"
          aria-label="Voir le projet de l'entreprise Montyon Capital"
          class="w-48 sm:w-64 md:w-80 absolute top-[75%] left-[35%] -translate-x-1/2 -translate-y-1/2 -rotate-15 h-auto shadow-xl rounded-md z-2 transition-all duration-300 ease-in-out hover:z-4 hover:-rotate-14 hover:shadow-hero-card md:top-[55%]"
        >
          <Image
            src={montyonCard}
            alt="Placeholder"
            width={600}
            height={450}
            class="w-full h-auto object-cover"
          />
        </a>
        <a
          href="/projets/gojura"
          aria-label="Voir le projet de l'entreprise Gojura"
          class="w-48 sm:w-64 md:w-80 absolute top-[55%] left-[65%] -translate-x-1/2 -translate-y-1/2 rotate-5 h-auto shadow-xl rounded-md z-1 transition-all duration-300 ease-in-out hover:z-4 hover:rotate-4 hover:shadow-hero-card md:top-[45%]"
        >
          <Image
            src={gojuraCard}
            alt="Placeholder"
            width={600}
            height={450}
            class="w-full h-auto object-cover"
          />
        </a>
      </div>
    </div>
  </div>

  <section class="container mx-auto w-full px-4 py-10 space-y-6 md:py-20">
    <div class="grid grid-cols-1 gap-4 mb-10 md:grid-cols-2">
      <h2 class="text-4xl text-da md:text-5xl">
        Une agence wordpress à {cityName} aux multiples casquettes
      </h2>
      <p class="text-lg text-balance">
        Vous cherchez un accompagnement dans la création, le développement et la
        maintenance de votre site wordpress. Nous proposons des solutions sur
        mesure et performantes avec un regard vers l'avenir et l'éco-conception.
      </p>
    </div>
    <ul
      class="grid grid-cols-1 gap-8 container mx-auto md:gap-4 md:grid-cols-2"
    >
      {
        sortedExpertises.map((expertise) => (
          <ServiceItem expertise={expertise} />
        ))
      }
    </ul>
  </section>

  <FeaturedWorks
    projects={featuredProjects}
    title="Nos projets"
    subTitle="Nos clients, des projets uniques"
    theme="light"
  />

  <section class="bg-da text-da-white">
    <div
      class="container flex flex-col items-center justify-center mx-auto w-full py-20 px-4"
    >
      <h2 class="text-base text-da-300 leading-none uppercase">
        Comment nous travaillons ?
      </h2>
      <p class="text-4xl text-center mb-4 font-title md:text-6xl">
        Une construction <em class="font-title">tech</em>, un regard <em
          class="font-title">design</em
        > et une réflexion <em class="font-title">marketing</em> pour chaque projet.
      </p>
      <Button label="En savoir plus" link="/a-propos" style="secondary" />
    </div>
  </section>

  <section class="container mx-auto w-full px-4 py-20">
    <h3 class="text-4xl text-da md:text-5xl mb-10">
      Ils nous font confiance <br /> pour leur site wordpress
    </h3>
    <ul
      class="grid grid-cols-2 gap-0.25 bg-da-100 md:grid-cols-5 md:w-4/5 md:mx-auto"
    >
      {
        clients.map((client) => (
          <li class="group w-full flex items-center justify-center col-span-1 bg-da-white object-contain p-8">
            <Image
              src={client.data.logo}
              alt={`Logo de l'entreprise ${client.data.client}`}
              class="group-hover:-translate-y-2 transition-transform ease-in-out duration-300"
            />
          </li>
        ))
      }
    </ul>
  </section>

  <CtaBanner />
</Layout>
